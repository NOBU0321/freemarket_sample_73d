<h2>住所情報登録</h2>

<%= form_for @address do |f| %>
  <%= render "devise/shared/error_messages", resource: @address %>

  <div class="field">
    <%= f.label :ship_last_name %><br />
    <%= f.text_field :ship_last_name %>
  </div>

  <div class="field">
    <%= f.label :ship_first_name %><br />
    <%= f.text_field :ship_first_name %>
  </div>

  <div class="field">
    <%= f.label :ship_last_name_kana %><br />
    <%= f.text_field :ship_last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :ship_first_name_kana %><br />
    <%= f.text_field :ship_first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postcode %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :prefecture %><br />
    <%= f.text_field :prefecture %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :block %><br />
    <%= f.text_field :block %>
  </div>

  <div class="field">
    <%= f.label :building %><br />
    <%= f.text_field :building %>
  </div>

  <div class="field">
    <%= f.label :ship_phone_number %><br />
    <%= f.text_field :ship_phone_number %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>