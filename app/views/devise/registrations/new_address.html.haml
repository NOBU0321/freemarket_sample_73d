.header
  .header__h-container
    .header__h-container__single-header
      %h1.header__h-container__single-header__logo
        = link_to "#" do
          = image_tag "/material/logo/logo.png", class: "furima-logo", alt: "FURIMA"
      %nav.header__h-container__single-header__progress
        %ol.clearfix
          %li.header__h-container__single-header__progress__active{ id: "first" }
            会員情報
            .header__h-container__single-header__progress__round--red
          %li.header__h-container__single-header__progress__active{ id: "first" }
            住所登録
            .header__h-container__single-header__progress__round{ id: "red-round"}
            .header__h-container__single-header__progress__line{ id: "red" }
          %li.header__h-container__single-header__progress__text{ id: "end" }
            完了
            .header__h-container__single-header__progress__round
.main__new
  .main__new__title 発送元・お届け先住所登録
  = form_for @address do |f|
    = render "devise/shared/error_messages", resource: @address
    .main__new__container
      .main__new__container__field--parallel
        .main__new__container__field--parallel-each
          = f.label :お名前（全角）, class: "main__new__container__field__label", id: "name__label"
          %p.main__new__container__field__label-red 必須
          %br/
          = f.text_field :ship_last_name, autofocus: true, placeholder: "例）山田", class: "main__new__container__field__form-each"
        .main__new__container__field--parallel-each
          %br/
          = f.text_field :ship_first_name, placeholder: "例）彩", class: "main__new__container__field__form-each"
      .main__new__container__field--parallel
        .main__new__container__field--parallel-each
          = f.label :お名前かな（全角）, class: "main__new__container__field__label", id: "name__label"
          %p.main__new__container__field__label-red 必須
          %br/
          = f.text_field :ship_last_name_kana, placeholder: "例）やまだ", class: "main__new__container__field__form-each"
        .main__new__container__field--parallel-each
          %br/
          = f.text_field :ship_first_name_kana, placeholder: "例）あや", class: "main__new__container__field__form-each"
      .main__new__container__field
        = f.label :郵便番号, class: "main__container__field__label"
        %p.main__new__container__field__label-red 必須
        %br/
        = f.text_field :postcode, placeholder: "例）1234567", class: "main__new__container__field__form"
      .main__new__container__field
        = f.label :都道府県, class: "main__new__container__field__label"
        %p.main__new__container__field__label-red 必須
        %br/
        = f.select :prefecture, Address.prefectures.keys, {}, {class: "main__new__container__field__form", id: "prefectures-form"}
      .main__new__container__field
        = f.label :市区町村, class: "main__new__container__field__label"
        %p.main__new__container__field__label-red 必須
        %br/
        = f.text_field :city, placeholder: "例）横浜市緑区", class: "main__new__container__field__form"
      .main__new__container__field
        = f.label :番地, class: "main__new__container__field__label"
        %p.main__new__container__field__label-red 必須
        %br/
        = f.text_field :block, placeholder: "例）青山1-1-1", class: "main__new__container__field__form"
      .main__new__container__field
        = f.label :建物名, class: "main__new__container__field__label"
        %p.main__new__container__field__label ※任意
        %br/
        = f.text_field :building, placeholder: "例）柳ビル103", class: "main__new__container__field__form"
      .main__new__container__field
        = f.label :電話番号, class: "main__new__container__field__label"
        %p.main__new__container__field__label ※任意
        %br/
        = f.text_field :ship_phone_number, placeholder: "例）09012345678", class: "main__new__container__field__form"
      .actions
        = f.submit "登録", class: "main__container__field__btn"
= render "footer"
