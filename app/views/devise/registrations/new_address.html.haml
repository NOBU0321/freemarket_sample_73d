.header
  .header__h-container
    .header__h-container__single-header
      %h1.header__h-container__single-header__logo
        = link_to "#" do
          = image_tag "/material/logo/logo.png", class: "furima-logo", alt: "FURIMA"
      %nav.header__h-container__single-header__progress
        %ol.clearfix
          %li.header__h-container__single-header__progress__active{ id: "first" }
            会員情報
            .header__h-container__single-header__progress__round--red
          %li.header__h-container__single-header__progress__text
            住所登録
            .header__h-container__single-header__progress__round
            .header__h-container__single-header__progress__line{ id: "long" }    
          %li.header__h-container__single-header__progress__text{ id: "end" }
            完了
            .header__h-container__single-header__progress__round
.main
  .main__title 住所入力
= form_for @address do |f|
  = render "devise/shared/error_messages", resource: @address
  .field
    = f.label :ship_last_name
    %br/
    = f.text_field :ship_last_name
  .field
    = f.label :ship_first_name
    %br/
    = f.text_field :ship_first_name
  .field
    = f.label :ship_last_name_kana
    %br/
    = f.text_field :ship_last_name_kana
  .field
    = f.label :ship_first_name_kana
    %br/
    = f.text_field :ship_first_name_kana
  .field
    = f.label :postcode
    %br/
    = f.text_field :postcode
  .field
    = f.label :prefecture
    %br/
    = f.text_field :prefecture
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :block
    %br/
    = f.text_field :block
  .field
    = f.label :building
    %br/
    = f.text_field :building
  .field
    = f.label :ship_phone_number
    %br/
    = f.text_field :ship_phone_number
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
