.header
  .header__h-container
    .header__h-container__single-header
      %h1.header__h-container__single-header__logo
        = link_to "#" do
          = image_tag src="/material/logo/logo.png", class: "furima-logo", alt: "FURIMA"
      %nav.header__h-container__single-header__progress
        %ol.clearfix
          %li.header__h-container__single-header__progress__active{ id: "first" }
            会員情報
            .header__h-container__single-header__progress__round--red
          %li.header__h-container__single-header__progress__text
            電話番号認証
            .header__h-container__single-header__progress__round
            .header__h-container__single-header__progress__line{ id: "long" }    
          %li.header__h-container__single-header__progress__text{ id: "end" }
            完了
            .header__h-container__single-header__progress__round

%h2 会員情報入力
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname, autofocus: true
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, autofocus: true
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true
  .field
    = f.label :kana
    %br/
    = f.text_field :last_name_kana, autofocus: true
  .field
    = f.label :kana
    %br/
    = f.text_field :first_name_kana, autofocus: true
  .field
    = f.label :birth
    %br/
    = f.date_field :date_of_birth, autofocus: true
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
